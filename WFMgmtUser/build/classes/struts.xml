<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="ApplicationResources" />

	<!-- <package name="default" extends="struts-default" namespace=""> -->
	<!-- <result-types> -->
	<!-- <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/> -->
	<!-- </result-types> -->


	<!-- </package> -->


	<!-- Workflow Instance details -->
	<package name="wfinstance" extends="struts-default" namespace="">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		<action name="viewinstancedetails" class="action.WorkflowInstanceAction">
			<result name="displayinstancedetails" type="tiles">DisplayWorkflowInstanceDetails_member
			</result>
			<result name="displayworkflowinstancedata" type="tiles">DisplayWorkflowData
			</result>
			<result name="displayeventhistory" type="tiles">DisplayEventHistory
			</result>
			<result name="error" type="tiles">Error</result>
		</action>


	</package>

	<!-- Workflow Type details -->
	<package name="wftype" extends="struts-default" namespace="/">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

		<action name="login" class="action.Login">
			<result name="initial_entry" type="tiles">Login</result>
			<result name="success_admin" type="tiles">AdminPage</result>
			<result name="success_member" type="tiles">DisplayWorkflowInstanceList_member
			</result>
			<result name="error" type="tiles">Error</result>
		</action>

		<action name="viewtypedetails" class="action.WorkflowTypeAction">
			<exception-mapping exception="java.lang.Exception"
				result="error" />
			<result name="displaytypedetails" type="tiles">DisplayWorkflowTypeDetails
			</result>
			<result name="displaymembers" type="tiles">DisplayMemberList</result>
			<result name="displayinstances" type="tiles">DisplayWorkflowInstanceList
			</result>
			<result name="displayinstances_member" type="tiles">DisplayWorkflowInstanceList_member
			</result>
			<result name="displayroles" type="tiles">DisplayRoleList</result>
			<result name="displayactions" type="tiles">DisplayActions</result>
			<result name="displaystates" type="tiles">DisplayStates</result>
			<result name="displaystatesequence" type="tiles">DisplayStateSequence
			</result>
			<result name="error" type="tiles">Error</result>
		</action>

		<action name="viewtypelist" class="action.WorkflowAppAction">
			<result name="displaytypes" type="tiles">DisplayWorkflowTypeList
			</result>
			<result name="error" type="tiles">Error</result>
		</action>

		<action name="viewmemberdetails" class="action.MemberAction">
			<result name="displaymemberdetails" type="tiles">DisplayMemberDetails
			</result>
			<result name="error" type="tiles">Error</result>
		</action>

		<action name="createworkflowinstance" class="action.CreateWorkflowInstanceAction">
			<exception-mapping exception="java.lang.Exception"
				result="error" />
			<result name="createworkflowinstance" type="tiles">CreateWorkflowInstance
			</result>
			<result name="actionselected" type="tiles">ActionSelected</result>
			<result name="success" type="tiles">Successwfinstance</result>
			<result name="error" type="tiles">Error</result>
		</action>

		<!-- <action name="dummycreatewfinstance" class="action.DummyCreateWfInstanceAction"> 
			<result name="success" type="tiles">CreateWorkflowInstance</result> <result 
			name="error" type="tiles">Error</result> </action> -->
		<action name="logout" class="action.Logout">
			<result name="success" type="tiles">Logout</result>
			<result name="error" type="tiles">Error</result>
		</action>
		<action name="progressworkflow" class="action.ProgressWorkflowAction">
			<result name="success" type="tiles">Successwfinstance</result>
		</action>

	</package>
</struts>
